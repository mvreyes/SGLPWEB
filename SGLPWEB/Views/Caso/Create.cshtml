@model SGLPWEB.Models.Caso
@{
    ViewBag.Title = "Registrar Caso";
}

<div class="container mt-4">
    <div class="card shadow-sm">
        <div class="card-header bg-primary text-white">
            <h4 class="mb-0">Registrar Caso</h4>
        </div>
        <div class="card-body">

            @if (ViewBag.Mensaje != null)
            {
                <div class="alert alert-success alert-dismissible fade show" role="alert">
                    @ViewBag.Mensaje
                    <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
                </div>
            }

            @if (ViewBag.MensajeError != null)
            {
                <div class="alert alert-danger alert-dismissible fade show" role="alert">
                    @ViewBag.MensajeError
                    <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
                </div>
            }

            @using (Html.BeginForm())
            {
                @Html.AntiForgeryToken()
                @Html.HiddenFor(m => m.NumeroCaso)

                <div class="mb-3">
                    @Html.LabelFor(m => m.NombreCaso, htmlAttributes: new { @class = "form-label fw-bold" })
                    @Html.TextBoxFor(m => m.NombreCaso, new { @class = "form-control", placeholder = "Ingrese el nombre del caso" })
                    @Html.ValidationMessageFor(m => m.NombreCaso, "", new { @class = "text-danger" })
                </div>

                <div class="mb-3">
                    @Html.LabelFor(m => m.FechaInicio, htmlAttributes: new { @class = "form-label fw-bold" })
                    @Html.TextBoxFor(m => m.FechaInicio, "{0:yyyy-MM-dd}", new { type = "date", @class = "form-control" })
                    @Html.ValidationMessageFor(m => m.FechaInicio, "", new { @class = "text-danger" })
                </div>

                <div class="mb-3">
                    @Html.LabelFor(m => m.Nota, htmlAttributes: new { @class = "form-label fw-bold" })
                    @Html.TextAreaFor(m => m.Nota, new { @class = "form-control", rows = "3", placeholder = "Escriba detalles del caso..." })
                    @Html.ValidationMessageFor(m => m.Nota, "", new { @class = "text-danger" })
                </div>

                <div class="mb-3">
                    @Html.LabelFor(m => m.idCliente, htmlAttributes: new { @class = "form-label fw-bold" })
                    @Html.DropDownListFor(m => m.idCliente, (IEnumerable<SelectListItem>)ViewBag.Clientes, "Seleccione un cliente", new { @class = "form-select" })
                    @Html.ValidationMessageFor(m => m.idCliente, "", new { @class = "text-danger" })
                </div>

                <div class="d-flex justify-content-end">
                    <button type="submit" class="btn btn-success px-4">
                        <i class="bi bi-check-circle"></i> Guardar Caso
                    </button>
                </div>
            }
        </div>
    </div>
</div>
