@model SGLPWEB.Models.Cliente
@{
    ViewBag.Title = "Registrar Cliente";
}

<div class="container mt-4">
    <div class="card shadow-sm">
        <div class="card-header bg-primary text-white">
            <h4 class="mb-0">Registrar Cliente</h4>
        </div>
        <div class="card-body">

            @if (ViewBag.Mensaje != null)
            {
                <div class="alert alert-success alert-dismissible fade show" role="alert">
                    @ViewBag.Mensaje
                    <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
                </div>
            }

            @using (Html.BeginForm())
            {
                @Html.AntiForgeryToken()

                <div class="mb-3">
                    @Html.LabelFor(m => m.Identificación, htmlAttributes: new { @class = "form-label fw-bold" })
                    @Html.TextBoxFor(m => m.Identificación, new { @class = "form-control", placeholder = "Ingrese cédula o RUC" })
                    @Html.ValidationMessageFor(m => m.Identificación, "", new { @class = "text-danger" })
                </div>

                <div class="mb-3">
                    @Html.LabelFor(m => m.Nombres, htmlAttributes: new { @class = "form-label fw-bold" })
                    @Html.TextBoxFor(m => m.Nombres, new { @class = "form-control", placeholder = "Nombres completos" })
                    @Html.ValidationMessageFor(m => m.Nombres, "", new { @class = "text-danger" })
                </div>

                <div class="mb-3">
                    @Html.LabelFor(m => m.Apellidos, htmlAttributes: new { @class = "form-label fw-bold" })
                    @Html.TextBoxFor(m => m.Apellidos, new { @class = "form-control", placeholder = "Apellidos completos" })
                    @Html.ValidationMessageFor(m => m.Apellidos, "", new { @class = "text-danger" })
                </div>

                <div class="mb-3">
                    @Html.LabelFor(m => m.CorreoElectronico, htmlAttributes: new { @class = "form-label fw-bold" })
                    @Html.TextBoxFor(m => m.CorreoElectronico, new { @class = "form-control", placeholder = "ejemplo@correo.com" })
                    @Html.ValidationMessageFor(m => m.CorreoElectronico, "", new { @class = "text-danger" })
                </div>

                <div class="mb-3">
                    @Html.LabelFor(m => m.Direccion, htmlAttributes: new { @class = "form-label fw-bold" })
                    @Html.TextAreaFor(m => m.Direccion, new { @class = "form-control", rows = "2", placeholder = "Dirección completa" })
                    @Html.ValidationMessageFor(m => m.Direccion, "", new { @class = "text-danger" })
                </div>

                <div class="mb-3">
                    @Html.LabelFor(m => m.Telefono, htmlAttributes: new { @class = "form-label fw-bold" })
                    @Html.TextBoxFor(m => m.Telefono, new { @class = "form-control", placeholder = "Número de contacto" })
                    @Html.ValidationMessageFor(m => m.Telefono, "", new { @class = "text-danger" })
                </div>

                <div class="mb-3">
                    @Html.LabelFor(m => m.FechaNacimiento, htmlAttributes: new { @class = "form-label fw-bold" })
                    @Html.TextBoxFor(m => m.FechaNacimiento, "{0:yyyy-MM-dd}", new { type = "date", @class = "form-control" })
                    @Html.ValidationMessageFor(m => m.FechaNacimiento, "", new { @class = "text-danger" })
                </div>

                <div class="d-flex justify-content-end">
                    <button type="submit" class="btn btn-success px-4">
                        <i class="bi bi-check-circle"></i> Guardar Cliente
                    </button>
                </div>
            }
        </div>
    </div>
</div>
